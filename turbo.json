{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "envMode": "loose",
  "globalDependencies": ["**/.env*", "tsconfig.json"],
  "globalEnv": ["NODE_ENV", "CI"],
  "globalPassThroughEnv": ["GITHUB_TOKEN", "VERCEL_TOKEN"],
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "tsconfig.json"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["topo"],
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "format": {
      "dependsOn": ["topo"],
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "typecheck": {
      "dependsOn": ["topo"],
      "inputs": ["$TURBO_DEFAULT$", "$TURBO_ROOT$/tsconfig.json"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["*.env*"]
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["topo", "^test"],
      "inputs": ["$TURBO_DEFAULT$", "test/**/*.ts", "tests/**/*.ts"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true,
      "interactive": true
    },
    "test:coverage": {
      "dependsOn": ["topo", "^test:coverage"],
      "inputs": ["$TURBO_DEFAULT$", "test/**/*.ts", "tests/**/*.ts"],
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "dependsOn": ["topo"],
      "inputs": ["$TURBO_DEFAULT$", "tests/**/*.ts"],
      "outputs": ["test-results/**", "playwright-report/**"]
    },
    "migrate": {
      "inputs": ["migrations/**/*.sql"],
      "outputs": ["migrations/**"],
      "env": ["DATABASE_URL"]
    },
    "migrate:check": {
      "inputs": ["migrations/**/*.sql"],
      "env": ["DATABASE_URL"]
    },
    "deploy:dev": {
      "cache": false,
      "env": ["AWS_*", "VERCEL_*"]
    },
    "deploy:staging": {
      "cache": false,
      "env": ["AWS_*", "VERCEL_*"]
    },
    "deploy:prod": {
      "cache": false,
      "env": ["AWS_*", "VERCEL_*"]
    },
    "generate": {
      "inputs": ["src/schema/**/*.ts", "drizzle.config.ts"],
      "outputs": ["migrations/**"],
      "env": ["DATABASE_URL"]
    },
    "push": {
      "cache": false,
      "inputs": ["src/schema/**/*.ts", "drizzle.config.ts"],
      "env": ["DATABASE_URL"]
    },
    "drop": {
      "cache": false,
      "env": ["DATABASE_URL"],
      "interactive": true
    },
    "auth:generate": {
      "cache": false,
      "env": ["DATABASE_URL"]
    }
  }
}
