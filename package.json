{
  "name": "sgcarstrends",
  "version": "4.35.1",
  "description": "Monorepo for SG Cars Trends",
  "author": "Ru Chern Chong <ruchern.chong@sgcarstrends.com>",
  "license": "MIT",
  "scripts": {
    "build": "turbo build",
    "dev": "sst dev --stage local",
    "lint": "turbo lint",
    "format": "turbo format",
    "start": "turbo start",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "test:watch": "turbo test:watch",
    "migrate": "turbo migrate",
    "migrate:check": "turbo migrate:check",
    "prepare": "husky",
    "release": "semantic-release",
    "build:web": "turbo run @sgcarstrends/web#build",
    "build:admin": "turbo run @sgcarstrends/admin#build",
    "dev:api": "turbo run @sgcarstrends/api#dev",
    "dev:web": "turbo run @sgcarstrends/web#dev",
    "dev:admin": "turbo run @sgcarstrends/admin#dev",
    "test:api": "turbo run @sgcarstrends/api#test",
    "test:web": "turbo run @sgcarstrends/web#test",
    "lint:admin": "turbo run @sgcarstrends/admin#lint",
    "lint:api": "turbo run @sgcarstrends/api#lint",
    "lint:web": "turbo run @sgcarstrends/web#lint",
    "start:web": "turbo run @sgcarstrends/web#start",
    "deploy:dev": "sst deploy --stage dev",
    "deploy:staging": "sst deploy --stage staging",
    "deploy:prod": "sst deploy --stage prod",
    "deploy:api:dev": "turbo run @sgcarstrends/api#deploy:dev",
    "deploy:api:staging": "turbo run @sgcarstrends/api#deploy:staging",
    "deploy:api:prod": "turbo run @sgcarstrends/api#deploy:prod",
    "deploy:web:dev": "turbo run @sgcarstrends/web#deploy:dev",
    "deploy:web:staging": "turbo run @sgcarstrends/web#deploy:staging",
    "deploy:web:prod": "turbo run @sgcarstrends/web#deploy:prod",
    "db:migrate": "turbo run @sgcarstrends/database#migrate",
    "db:migrate:check": "turbo run @sgcarstrends/database#migrate:check",
    "db:generate": "turbo run @sgcarstrends/database#generate",
    "db:push": "turbo run @sgcarstrends/database#push",
    "db:drop": "turbo run @sgcarstrends/database#drop",
    "docs:build": "turbo run @sgcarstrends/docs#build",
    "docs:dev": "turbo run @sgcarstrends/docs#dev",
    "auth:generate": "turbo run auth:generate"
  },
  "dependencies": {
    "@heroui/navbar": "^2.2.26",
    "sst": "3.17.21"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "semantic-release": "^24.0.0",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "packageManager": "bun@1.3.5",
  "lint-staged": {
    "*.{js,ts,tsx,jsx,json,jsonc}": [
      "bun run biome check --write --no-errors-on-unmatched"
    ]
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@ai-sdk/google": "^2.0.44",
      "@langfuse/otel": "^4.4.2",
      "@tailwindcss/postcss": "^4.1.11",
      "@types/node": "^22.16.4",
      "@types/react": "^19.2.0",
      "@types/react-dom": "^19.2.0",
      "@upstash/workflow": "0.3.0-rc",
      "@vercel/related-projects": "^1.0.0",
      "@vitest/coverage-v8": "^4.0.15",
      "@vitest/ui": "^4.0.15",
      "ai": "^5.0.105",
      "date-fns": "^3.6.0",
      "next": "^16.1.0",
      "react": "^19.2.3",
      "react-dom": "^19.2.3",
      "resend": "^6.1.2",
      "sonner": "^2.0.7",
      "tailwindcss": "^4.1.11",
      "typescript": "^5.8.3",
      "vitest": "^4.0.15",
      "zod": "^4.1.13"
    }
  },
  "overrides": {
    "form-data@>=4.0.0 <4.0.4": ">=4.0.4"
  }
}
