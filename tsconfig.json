{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "@admin/*": ["apps/admin/src/*"],
      "@api/*": ["apps/api/src/*"],
      "@web/*": ["apps/web/src/*"],
      "@sgcarstrends/ui/*": ["packages/ui/src/*"]
    }
  },
  "exclude": ["node_modules", ".sst"]
}
